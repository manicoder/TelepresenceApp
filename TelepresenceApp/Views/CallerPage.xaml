<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TelepresenceApp.Views.CallerPage">
    <StackLayout Background="#fff"> 
        <StackLayout  x:Name="callerPanel" Padding="25" Spacing="20" VerticalOptions="Center">
                <Frame Padding="15,5,15,5" BorderColor="CadetBlue" CornerRadius="30" HeightRequest="50" HasShadow="False">
                <Entry x:Name="txtCallerUserId" Placeholder="Caller Id"/>
            </Frame>

            <Button Text="Call" Clicked="ToCallerClick" HeightRequest="50" CornerRadius="25" Padding="0" Margin="0"/>
        </StackLayout>
        <StackLayout x:Name="connectionPanel">
            <Label Text="Connecting..."/>
            <Button Text="Try Again" Clicked="tryAgainClick" HeightRequest="50" CornerRadius="25" Padding="0" Margin="0"/>
            <Button Text="Abort Connection" Clicked="abortConnection" HeightRequest="50" CornerRadius="25" Padding="0" Margin="0"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
